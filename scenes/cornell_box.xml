<!-- A simple Cornell Box scene -->
<scene>
    <camera lookfrom="0 1 4" lookat="0 1 0" vup="0 1 0" vfov="40" aspect="1.0" />

    <!-- Materials -->
    <material id="0" type="diffuse" albedo="0.75 0.75 0.75" /> <!-- White -->
    <material id="1" type="diffuse" albedo="0.75 0.25 0.25" /> <!-- Red -->
    <material id="2" type="diffuse" albedo="0.25 0.25 0.75" /> <!-- Blue -->
    <material id="3" type="specular" albedo="0.9 0.9 0.9" />   <!-- Mirror -->

    <!-- Mesh objects (OBJ files would be loaded here) -->
    <!-- For simplicity, geometry is hard-coded in scene.cpp for now -->
    <mesh file="floor.obj" material_id="0" />
    <mesh file="left_wall.obj" material_id="1" />
    <mesh file="right_wall.obj" material_id="2" />
    <mesh file="short_box.obj" material_id="0" />
    <mesh file="tall_box.obj" material_id="3" />
</scene>


